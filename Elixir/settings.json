{
    "git.ignoreLimitWarning": true,
    "editor.formatOnSave": true,
    "html.format.contentUnformatted": "",
    "files.associations": {
      "*.js": "javascript",
      "*.eex": "html-eex",
      "*.leex": "html-eex"
    },
    "emmet.includeLanguages": {
    "HTML (EEx)": "html"
    },
    "beautify.language": {
        "js": {
          "type": [
            "javascript",
            "json",
            "jsonc"
          ],
          "filename": [
            ".jshintrc",
            ".jsbeautifyrc"
          ]
        },
        "css": [
          "css",
          "less",
          "scss"
        ],
        "html": [
          "htm",
          "html",
          "HTML (EEx)"
        ]
      }
}
